<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>

    <%= tag.header class: %w( header ) do %>
      <%= tag.nav class: %w( navbar navbar-expand bg-light ) do %>
        <%= link_to "Blog On Rails", root_path, class: "navbar-brand" %>
        <%= content_tag :ul, class: "navbar-nav" do %>
          <% if user_signed_in? %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to current_user.full_name, edit_user_path(current_user), class: "nav-link" %>
            <% end %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Logout", session_path, method: :delete, data: {confirm: "Log Out?"}, class: "nav-link" %>
            <% end %>
          <% else %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Login", new_session_path, class: "nav-link" %>
            <% end %>
            <%= content_tag :li, class: "nav-item" do %>
              <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
            <% end %>
          <% end %>
          <%= content_tag :li, class: "nav-item" do %>
            <%= link_to "Home", root_path, class: "nav-link" %>
          <% end %>
          <%= content_tag :li, class: "nav-item" do %>
            <%= link_to "New Post", new_post_path, class: "nav-link" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <% flash.each do |type, message| %>
      <div class="alert alert-primary" role="alert">
        <%= message %>
      </div>
    <% end %>
    <%= tag.main class: %w( main container.fluid ) do %>
      <%= yield %>
    <% end %>

  </body>
</html>
