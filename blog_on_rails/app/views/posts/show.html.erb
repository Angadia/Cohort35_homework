        <div class="post card border-0">
          <div class="card-body">
            <h2 class="card-title"><%= @post.title %></h2>
            <div class="card-text">
              <%= @post.body %></p>
              <small class="text-muted">By <%= @post.user&.full_name || "DELETED" %> | 
              Posted <%= time_ago_in_words(@post.updated_at) %> ago</small>
            </div>
            <% if can? :crud, @post %>
              <%= link_to("Edit", edit_post_path(@post.id), class: "btn btn-outline-primary btn-md") %>
              <%= link_to("Delete", post_path(@post.id), method: :delete, data: {confirm: "Delete Post?"}, class: "btn btn-outline-primary btn-md") %>
            <% end %>

            <%= form_with(model: [@post, @new_comment], local: true) do |form| %>
              <div class="form_group">
                <h3><%= form.label :comment, for: :body %></h3>
                <%= form.text_area :body, cols: 50, rows: 3, placeholder: "What's on your mind?", class: "form-control" %>
              </div>
              <%= form.submit "Submit", class: "btn btn-outline-primary btn-lg" %>
            <% end %>

            <%= tag.comments class: "comments-list" do %>
              <% @post.comments.each do |comment| %>
                <div class="card border-0">
                  <div class="card-body">
                    <div class="card-text">
                      <%= comment.body %><br>
                        <small class="text-muted">By <%= comment.user&.full_name || "DELETED" %> | 
                        Commented <%= time_ago_in_words(comment.created_at) %> ago
                        <% if can? :destroy, comment %>
                          â€¢
                          <%= link_to("Delete", post_comment_path(@post, comment), method: :delete, data: { confirm: "Delete Comment?" }, class: "card-link") %>
                        <% end %></small>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

          </div>
        </div>