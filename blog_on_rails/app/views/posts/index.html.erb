        <%= tag.posts class: %w( posts card-deck ) do %>
          <% @posts.each do |post| %>
            <div class="card">
              <div class="card-body">
                <div class="card-title">
                  <%= link_to post.title, post_path(post.id) %>
                </div>
                <div class="card-text"><%= post.body %><br>
                  <small class="text-muted">By <%= post.user&.full_name || "DELETED" %></small>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>