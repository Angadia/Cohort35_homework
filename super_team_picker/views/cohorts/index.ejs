<%- include("../partials/header") %>
    <main class="main container">
    <%
    if (cohorts && cohorts.length > 0) {
    %>
      <articles class="cohorts container">
    <%
      cohorts.forEach(cohort => {
    %>
        <article class="cohort container mb-3">
          <div class="card">
            <div class="card-body">
              <div class="card-title">
                <img src="<%= cohort.logo_url %>" alt="<%= cohort.logo_url %>" class="rounded float-left">
                <h4 class="card-title"><%= cohort.name %></h4>
              </div>
              <p class="card-text"><%= cohort.members %></p>
              <div class="btn-group">
                <a href="/cohorts/<%= cohort.id %>" class="btn btn-primary">Show cohort</a>
              </div>
            </div>
          </div>
        </article>
    <%
      });
    %>
      </articles>
    <%
    } else {
    %>
      <div class="no_cohort_message">
        <h4>Sorry, no cohort to list. Please create a new Cohort.</h4>
      </div>
    <%
    };
    %>
    </main>
<%- include("../partials/footer") %>